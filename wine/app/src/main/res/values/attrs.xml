<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--图片阅览属性-->
    <declare-styleable name="ImagePreview">
        <attr name="imageSingleSize" format="dimension"/>
        <attr name="imageSingleRatio" format="float"/>
        <attr name="imageGridSpacing" format="dimension"/>
        <attr name="imageMaxSize" format="integer"/>
        <attr name="imageDisplayMode" format="enum">
            <enum name="fill" value="0"/>
            <enum name="grid" value="1"/>
        </attr>
    </declare-styleable>

    <!--Banner无限轮播属性-->
    <declare-styleable name="BannerView">
        <attr name="bannerPageMargin" format="dimension"/>
        <attr name="bannerPagePercent" format="float"/>
        <attr name="bannerPageScale" format="float"/>
        <attr name="bannerPageAlpha" format="float"/>
        <attr name="bannerScrollDuration" format="integer"/>
        <attr name="bannerAnimDuration" format="integer"/>
        <attr name="bannerAnimScroll" format="boolean"/>
        <attr name="bannerAutoScroll" format="boolean"/>
    </declare-styleable>


</resources>